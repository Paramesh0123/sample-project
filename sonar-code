pipeline {
  agent any
    stages {
      stage('checkout') {
        steps { 
          sh 'git clone https://github.com/Paramesh0123/sample-project.git'
        }
      }
      stage('SonarQube Analysis') {
       steps {
         withSonarQubeEnv('give the name, the name given in SonarQube installations in system configuration ') {
	       sh 'mvn sonar:sonar'
	       }
      }
   }
      stage('build') {
        steps {
          sh 'mvn clean install'
        }
      }
      stage('deploy') {
        steps {
          sshagent(['tomcat-key']) {
          sh "scp -o StrictHostKeyChecking=no target/hello-world-webapp.war ubuntu@13.126.156.164:/home/ubuntu/apache-tomcat-10.1.39/webapps"
          }
        }
      }
  }
}
